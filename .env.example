# Environment variables for JARVIS
# Copy this file to .env and fill in your credentials

# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Email Configuration (Gmail)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Email Configuration (Outlook/Microsoft)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token

# LinkedIn Configuration (for scraping)
LINKEDIN_EMAIL=your_linkedin_email
LINKEDIN_PASSWORD=your_linkedin_password

# Calendar Configuration (Google)
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret

# Voice Synthesis (ElevenLabs for Optimus Prime voice)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Optional: Local AI Models
# OLLAMA_HOST=http://localhost:11434
# LOCAL_MODEL_PATH=/path/to/local/models

# Security
# MASTER_PASSWORD=your_master_password_for_encryption
